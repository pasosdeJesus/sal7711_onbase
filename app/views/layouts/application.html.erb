<% content_for :menu do %>
  <%= menu_group do %>
    <% if !current_usuario.nil? %>
      <%= menu_item "Buscar", "/buscar" %>
      <%= menu_item "Manual de Uso", "/Manual_de_Uso_Archivo_Digital_de_Prensa_CINEP.pdf", target: '_blank' %>
      <%= menu_item "Acerca de", sip.acercade_path %>
    <% end %>
  <% end %>
  <%= menu_group :pull => :right do %>
    <% if false && !current_usuario.nil? %> <!-- si es solo ip no dejar -->
      <%= drop_down "Administrar" do %> 
        <%= menu_item "Clave", sip.editar_registro_usuario_path %> 
        <% if current_usuario.rol == Ability::ROLADMIN %>
          <%= menu_item "Usuarios", sip.usuarios_path %>
          <%= menu_item "Tablas Básicas", sip.tablasbasicas_path %>
          <%= menu_item "Consultas por usuario", "/bitacora/admin" %>
          <%= menu_item "Consultas en tiempo", "/bitacora/tiempo" %>
          <%= menu_item "Enviar instrucciones de reconfirmación", "/usuarios/reconfirma" %>
        <% end %>
      <% end %>
      <%= menu_item "Salir #{current_usuario.nusuario}", sip.sign_out_path %>
    <% else %>
      <!--%= menu_item "Inscribirse", "https://archivoprensa.cinep.org.co/usuarios/sign_up" %-->
      <!--%= menu_item "Ingresar", "https://archivoprensa.cinep.org.co/usuarios/sign_in" %-->
      <li><img class='logo-inst' src="http://biblioteca.uniandes.edu.co/templates/bibliotecas/images/logo-uniandes.png"></span></li>
    <% end %>
  <% end %>
<% end %>

