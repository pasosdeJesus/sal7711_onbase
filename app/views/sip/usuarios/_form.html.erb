<%= simple_form_for @usuario, url: @miurl, html: { :class => 'form-horizontal' } do |f| %>

  <%= render 'usuario', :f => f %>

  <%= f.input :unconfirmed_email,
		label: 'Correo por confirmar'
	%>
	<%= f.input :confirmed_at,
		label: 'Fecha confirmación',
	  :as => :string
  %>
	<%= f.input :confirmation_token,
		label: 'Testigo de confirmación de correo'
  %>
	<%= f.input :confirmed_at,
		label: 'Fecha del envío de confirmación',
	  :as => :string
	%>

  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                usuarios_path, :class => 'btn' %>
  </div>
<% end %>
